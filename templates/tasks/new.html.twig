{% extends 'base.html.twig' %}
{% block body %}
    
<h1 class="text-center m-5">Ajout d'une tache</h1>

{{ form_start(taskForm) }}

<div class="container-fluid ">
    <div class="row mx-auto justify-content-md-center">
        <div class="col-md-2 text-center">
           {{ form_row(taskForm.dateTask) }}
           {{ form_row(taskForm.description) }}
           {{ form_row(taskForm.status) }}
            <button type="submit" class="btn btn-primary text-center">Enregistrer</button> 
        </div>
    </div>
</div>

{{ form_end(taskForm) }}
{% endblock %}